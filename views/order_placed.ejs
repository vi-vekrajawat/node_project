  </div>
  <div class="message">
    <h2>Order Placed Successfully!</h2>
    <p>Thank you for ordering with us ðŸŽ‰</p>
    <h4><a href="/home">Go Back</a></h4>
  </div>

  <!-- Balloons -->
  <% for (let i = 0; i < 150; i++) { %>
    <div class="balloon" style="
      left: <%= Math.random() * 100 %>vw;
      background-color: hsl(<%= Math.random() * 360 %>, 50%, 80%);
      animation-delay: <%= Math.random() * 3 %>s;
    ">

  </div>
  <% } %>

</body>
</html>

